<div class="individual-movie">
  <img class="poster" src="{{image}}" alt="">
  <div class="info">
    <a href="/movies">Go back</a>
    <h2>{{title}}</h2>
    <h3>{{director}}</h3>
    <h4>Stars</h4>
    <ul>
      {{#each stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{description}}</p>
    {{#each showtimes}}
      <span>{{this}}</span>
    {{/each}}
  </div>
</div>